#!/bin/sh
set -e
: ${maxsize:=20000000}
: ${dpi:=600}
svg=$1
png=${2:-${svg%.svg*}.png}

if [ $# -ne 1 -a $# -ne 2 ]; then
  echo "usage: [maxsize=${maxsize} dpi=${dpi}] ${0##*/} svg [png]" >&2
  exit 1
fi
[ -r ${svg} ]
if [ $(du -b ${svg} | cut -f1) -gt ${maxsize} ]; then
  echo "${svg} is large ($(du -h ${svg} | cut -f1))" >&2
  echo "inkscape may hang; exit" >&2
  exit 1
fi

inkscape ${svg} -d ${dpi} -e ${png} && echo "${png} created" || exit
xdg-open ${png} &
